@model QuoteService.Models.Quotes

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Quotes</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="QuoteId" />
            <div class="form-group">
                <label asp-for="InquirerId" class="control-label"></label>
                <select asp-for="InquirerId" class="form-control" asp-items="ViewBag.InquirerId"></select>
                <span asp-validation-for="InquirerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuoteEstimate" class="control-label"></label>
                <input asp-for="QuoteEstimate" class="form-control" />
                <span asp-validation-for="QuoteEstimate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpirationDate" class="control-label"></label>
                <input asp-for="ExpirationDate" class="form-control" />
                <span asp-validation-for="ExpirationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateCreated" class="control-label"></label>
                <input asp-for="DateCreated" class="form-control" />
                <span asp-validation-for="DateCreated" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
